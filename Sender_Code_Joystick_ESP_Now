#include <esp_now.h>
#include <WiFi.h>

struct JoystickData {
  int x;
  int y;
};

// ðŸ”¹ Make receiverMac global so loop() can use it
uint8_t receiverMac[] = {0xFF, 0xFF, 0xFF, 0xFF, 0xFF, 0xFF}; // Broadcast

void setupPeer() {
  esp_now_peer_info_t peerInfo = {};
  memcpy(peerInfo.peer_addr, receiverMac, 6);
  peerInfo.channel = 0;
  peerInfo.encrypt = false;
  esp_now_add_peer(&peerInfo);
}

void setup() {
  Serial.begin(115200);
  WiFi.mode(WIFI_STA);

  if (esp_now_init() != ESP_OK) {
    Serial.println("ESP-NOW init failed");
    return;
  }

  setupPeer();
}

void loop() {
  JoystickData data;
  data.x = analogRead(1);  // Pot X
  data.y = analogRead(2);  // Pot Y

  // Send the struct
  esp_now_send(receiverMac, (uint8_t *)&data, sizeof(data));

  delay(50);
}
